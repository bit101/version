#! /bin/bash

ver="v1.3.0"

# note: replace - with _ in tool name. e.g. pkg-config -> tools_pkg_config
# script will sanitize the input the same way

tools_alacritty=-V
tools_apt=-v
tools_arduino=--version
tools_audacious=-v
tools_autoconf=--version
tools_automake=--version
tools_awk=--version
